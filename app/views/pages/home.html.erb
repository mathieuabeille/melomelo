<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-xs-12 banner">
      <div class="banner-content">

        <% if user_signed_in? %>
          <div class="text-content">
          <h1>The best shops
          <br><strong class="strong-orange">are one click away</strong></h1>
          </div>

            <form action="<%= clothes_path %>" method="get">
              <div class="form-group search-input">
                <input type="search" class="search-case" id="search-clothe" placeholder="T-Shirt Blue Navy" name="name">
              </div>

              <div class="form-group">
                <select class="form-control" name="gender[]" action="<%= clothes_path %>">
                  <option>men</option>
                  <option>women</option>
                </select>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-default button-orange">Search</button>
              </div>
            </form>

        <% else %>

          <div class="text-content">
          <div class="container">
            <div class="row">
              <div class="col-sm-8">
                <h1>The <strong class="strong-orange">perfect garment </strong>
                <br>is one search away</h1></div>
            </div>
            <div class="col-sm-8">
              <h4>To begin the search</h4>
            <div class="row signing-up">
              <div class="col-sm-5">
              <%= link_to user_facebook_omniauth_authorize_path do %>
                <button class="social-signin facebook"> <i class="fa fa-facebook" aria-hidden="true"></i>  Sign up with facebook</button>
                <% end %>
              </div>
              <div class="col-sm-2">
              <center> or </center>
              </div>
              <div class="col-sm-5">
                <%= link_to new_user_registration_path do %>
                <button class="social-signin manually"> <i class="fa fa-sign-in" aria-hidden="true"></i>  Sign up manually</button>
                <% end %>
              </div>
            </div>
        <% end %>
        </div>
    </div>
  </div>
</div>
