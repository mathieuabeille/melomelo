<div id="padding">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 form-container">
        <%= simple_form_for(@wish) do |f| %>
            <div class="form-inputs">
              <%= f.input :name, placeholder: 'Jeans', label:'What would you like ?' %>
              <%= f.input :brand, placeholder: 'H&M', label:'Which brand would you like ?' %>
              <%= f.input :color, placeholder: 'Blue', label:'Which color would you like ?' %>
              <%= f.input :price, placeholder: '50', label:'Which price are you willing to pay ?' %>
              <%= f.input :material, placeholder: 'Coton', label:'Which material would you like ?' %>
              <%= f.input :gender, collection: [["Men", "men"], ["Women", "women"]], as: :radio_buttons %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Send", class:'btn-orange' %>
            </div>
        <% end %>
        </br>
      </div>
    </div>
  </div>
</br>
</div>
