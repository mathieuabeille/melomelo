<div id="padding">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 form-container">
        <%= simple_form_for(@wish) do |f| %>
            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :brand %>
              <%= f.input :color %>
              <%= f.input :price %>
              <%= f.input :material %>
              <%= f.input :gender, collection: [["Men", "men"], ["Women", "women"]], as: :radio_buttons %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Send" %>
            </div>
        <% end %>
        </br>
      </div>
    </div>
  </div>
</br>
</div>
