<div class="filters">
  <div class="container">
    <div class="alignement">
      <%= render "filters-bar" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="row cadre">
        <% @clothes.each do |cloth| %>
          <div class="col-sm-6">
            <div class="stage-bk-det">
              <div class="card-back">
                  <div class="card-image" style="background-image: url('http://<%= cloth.images_urls.first %>');">
                  <%= link_to clothe_baskets_path(cloth), method: :post, data: {
                    confirm: 'Add to cart?',
                    'confirm-button-text': 'Add',
                    'cancel-button-text': 'Nope',
                    'confirm-button-color': '#FF9900',
                    'sweet-alert-type': 'question',
                    text: cloth.name
                    } do %>
                  <div class="delete"><%= icon("heart")%></div>
                  <% end %>
                    <div class="price"> <%= cloth.price %>$</div>
                  </div>

                <div class="card-informations">
                  <h3><%= cloth.name %> - <%= cloth.brand %> - <%= cloth.sizes %></h3>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium voluptas praesentium totam tempora earum magni rerum laboriosam mollitia debitis.</p>
                </div>
              </div>
            </div>

          </div>

        <% end %>
      </div>
      <div class="page"><center><%= paginate @clothes %></center></div>
    </div>

    <div class="col-xs-12 col-sm-4 sticky-board">
      <div class ="selection">
        <div class="your-board" id="title-box">
          <div class="row">
            <p>Your Selection</p>
            <% @baskets.each do |basket| %>
              <div class="col-xs-12">
                <div class="stage-bk-det-board">
                  <div class="card-back-board">
                    <div class="card-image-board" style="background-image: url('http://<%= basket.cloth.images_urls.first %>');">
                    </div>

                    <div class="card-informations-board">
                      <h6><%= basket.cloth.name %> <br/> <%= basket.cloth.brand %> <br/> <%= basket.cloth.price %>$</h6>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




